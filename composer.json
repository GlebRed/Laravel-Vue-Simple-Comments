{
    "name": "glebred/laravel-vue-simple-comments",
    "description": "Vue Laravel Inertia simple comments",
    "keywords": [
        "glebred",
        "laravel-vue-simple-comments"
    ],
    "homepage": "https://github.com/glebred/laravel-vue-simple-comments",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Gleb Redko",
            "email": "gleb.redko@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "GlebRed\\LaravelVueSimpleComments\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GlebRed\\LaravelVueSimpleComments\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "GlebRed\\LaravelVueSimpleComments\\LaravelVueSimpleCommentsServiceProvider"
            ],
            "aliases": {
                "LaravelVueSimpleComments": "LaravelVueSimpleCommentsFacade"
            }
        }
    }
}
